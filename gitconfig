[core]
	excludesfile = /Users/alex/.gitignore_global
	pager = less -+F -c
[user]
	name = Alex Scherbanov
	email = alex@egotv.ru
[push]
	default = simple


[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan

[merge]
    conflictstyle = diff3

[diff "gpg"]
	textconv = gpg --no-tty --decrypt
## https://magit.vc/manual/magit/How-to-show-diffs-for-gpg_002dencrypted-files_003f.html
## https://www.git-scm.com/docs/gitattributes
## https://git-scm.com/book/en/v2/Customizing-Git-Git-Attributes

[credential]
	helper = osxkeychain
## to cache password when accesing github using https


